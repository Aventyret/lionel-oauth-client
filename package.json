{
  "private": true,
  "name": "lionel-oauth-client-monorepo",
  "author": "Ã„ventyret Sweden AB",
  "version": "1.0.0",
  "description": "Monorepo for Linonel oAuth client",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:client": "npm run build -w packages/client",
    "build:vue": "npm run build -w packages/vue",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:docs": "npm run dev --workspace=packages/docs",
    "dev:example-vue-oidc": "npm run dev --workspace=packages/example-vue-oidc",
    "predev:example-vue-oidc": "npm run build:client && npm run build:vue",
    "tag": "./tag.sh",
    "lint": "npm run lint --workspaces --if-present",
    "husky": "husky install",
    "pre-commit": "lint-staged",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspaces --if-present"
  },
  "keywords": [],
  "license": "MIN",
  "devDependencies": {
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint"
    ]
  },
  "workspaces": [
    "packages/client",
    "packages/vue",
    "packages/example-vue-oidc",
    "packages/docs"
  ]
}
